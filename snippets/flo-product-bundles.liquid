<div class="flo_bundles">
  {% for bundle in product.metafields.flo_product_bundle %}
    <div>
      {% for metaobject in bundle %}
        {{ metaobject }}
        {% assign quantity = metaobject.variant_quantity | times: 1 %}
        {{ quantity | json }}
        {% for product_quantity in (1..quantity) %}
          <select>
            {% for variant in metaobject.product_variants.value %}
              <option value="{{ variant.id }}">
                {{ variant.product.title }}
              </option>
            {% endfor %}
          </select>
        {% endfor %}
      {% endfor %}
    </div>
  {% endfor %}
</div>
{% style %}
  .flo_bundles{
    display: flex;
    flex-direction: column;
    gap:10px;
  }
{% endstyle %}

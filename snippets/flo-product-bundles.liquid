{% assign bundle_1 = product.metafields.flo_product_bundle.product_bundle_1.value %}
<div class="flo_bundles">
  {% for metaobject in bundle_1 %}
    {% assign quantity = metaobject.variant_quantity | times: 1 %}
    {% for product_quantity in (1..quantity) %}
      <div class="flo_bundles_offer_slector">
        <p>
          {{ metaobject.product_title.value }}
          {% if forloop.length > 1 %}{{ forloop.index }}{% endif %}
        </p>
        <select class="custom_select">
          {% for variant in metaobject.product_variants.value %}
            <option value="{{ variant.id }}">
              {{ variant.product.title }}
            </option>
          {% endfor %}
        </select>
      </div>
    {% endfor %}
  {% endfor %}
</div>

{% style %}
    .flo_bundles {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .flo_bundles_offer_slector{
      display: flex;
      gap: 10px;
      border-radius: 10px;
      background: pink;
      padding: 10px;
    }

    .custom_select {
      line-height: 23px;
      position: static;
      opacity: 1;
      display: block;
      background-position: right 10px center !important;
      border-radius: 3px;
      border: 1px solid #000;
      font-size: 16px;
      float: left;
      min-width: 100px;
      max-width: auto;
      width: auto;
      min-height: 25px;
      height: 25px;
      padding: 0 25px 0 3px;
      margin: 0;
      color: #000;
  }
{% endstyle %}

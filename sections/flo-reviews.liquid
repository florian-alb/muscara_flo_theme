<section
  id="FloReviews--{{ section.id }}"
  class="section-padding"
  data-section-id="{{ section.id }}"
  data-section-type="flo-reviews"
>
  <div class="reviews">
    <div class="reviews_title">
      <p>{{ section.settings.heading }}</p>
    </div>

    <div
      class="parer-wrapper-template--21255606173974__4ec3edd6-9177-4566-8b51-db8e9c631fb6"
      style="position: relative; height: 220px;"
    >
      <div class="parer">
        <div class="reviews_block">
          {% for block in section.blocks %}
            {% assign even = forloop.index | modulo: 2 %}
            {% if even == 0 %}
              <div class="reviews_item">
                <div class="item_wrap">
                  <div class="item_wrap-icon">
                    <div class="item_wrap-icon__icon"></div>
                    <div class="item_icon-review">
                      <span>{{ block.settings.rating }}</span>
                      <img
                        style="width:9px"
                        src="https://cdn.shopify.com/s/files/1/0581/1306/5129/t/1/assets/review-star.svg?v=8681932030933659819"
                        alt=""
                      >
                    </div>
                  </div>
                  <div class="item_wrap-text">
                    <p class="review-pseudo">{{ block.settings.name }}</p>
                    <p class="review-text-flo">{{ block.settings.review }}</p>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="reviews_block-bottom">
          {% for block in section.blocks %}
            {% assign even = forloop.index | modulo: 2 %}
            {% unless even == 0 %}
              <div class="reviews_item">
                <div class="item_wrap">
                  <div class="item_wrap-icon">
                    <div class="item_wrap-icon__icon"></div>
                    <div class="item_icon-review">
                      <span>{{ block.settings.rating }}</span>
                      <img
                        style="width:9px"
                        src="https://cdn.shopify.com/s/files/1/0581/1306/5129/t/1/assets/review-star.svg?v=8681932030933659819"
                        alt=""
                      >
                    </div>
                  </div>
                  <div class="item_wrap-text">
                    <p class="review-pseudo">{{ block.settings.name }}</p>
                    <p class="review-text-flo">{{ block.settings.review }}</p>
                  </div>
                </div>
              </div>
            {% endunless %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const review_item = document.querySelectorAll('.item_wrap');

  review_item.forEach((element) => {
    element.querySelector('.item_wrap-icon__icon').textContent = element.querySelector('.review-pseudo').textContent[0];
  });

  (function () {
    function setHeight() {
      let parer = document.querySelector('.parer-wrapper-template-1');
      let parerHeight = parer.getBoundingClientRect().height;
      let parerWrapper = document.querySelector('.parer-wrapper-template-1');
      parerWrapper.style.height = parerHeight + 'px';
    }
    // DOMContentLoaded:
    document.addEventListener('DOMContentLoaded', setHeight);
    window.addEventListener('resize', setHeight);
    document.addEventListener('shopify:section:load', setHeight);
  })();

  (function shortenReviews() {
    const reviewsTextBlocks = document.querySelectorAll('.review-text-flo');
    reviewsTextBlocks.forEach((textBlock) => {
      const letters = textBlock.textContent.length;

      if (letters > 50) {
        textBlock.textContent = textBlock.textContent.substring(0, 138) + '...';
      }
    });
  })();
</script>

{% style %}
  #FloReviews--{{ section.id }} {
    --PT: {{ section.settings.padding_top }}px;
    --PB: {{ section.settings.padding_bottom }}px;
    {%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
      --bg: {{ bg_color }};
      background: {{ bg_color }};
    {%- endif -%}
  }

  .review-pseudo {
    font-weight: bold;
    font-size: 18px;
  }

  .review-text-flo{
    color: {{section.settings.text_color}}
  }

  .section-template--21255606173974__4ec3edd6-9177-4566-8b51-db8e9c631fb6-padding {
    padding-top: 0px;
    padding-bottom: 27px;
  }

  @media screen and (min-width: 750px) {
    .section-template--21255606173974__4ec3edd6-9177-4566-8b51-db8e9c631fb6-padding {
      padding-top: 0px;
      padding-bottom: 36px;
    }
  }

  .reviews {
    padding: 0;
    display: block;
    margin: 0px auto;
    overflow: hidden;
  }

  .reviews * {
    font-size: var(--font-size);
  }

  @media (max-width: 767px) {
    .reviews * {
      font-size: var(--mobile-font-size, calc(var(--font-size) * 0.85));
    }
  }

  .reviews_title {
    text-align: center;
  }

  .reviews_title p {
    /*font-family: 'Ivy Mode SemiBold', serif !important;*/
    line-height: 1.3;
    font-weight: 600;
    margin-bottom: 50px;
    margin-top: 0px;
    padding: 0px 3rem;
    font-size: 42px;
    color: #000;
  }

  .reviews_title span {
    background: {{section.settings.span_color}};
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .parer {
    position: absolute;
    top: 0;
    left: 0;
    animation: CarouselSlider 45s linear infinite;
  }

  .reviews_block {
    display: flex;
    width: 2778px;
    transform: translateX(50px);
  }

  .reviews_block-bottom {
    transform: translateX(-180px);
    display: flex;
    width: 2778px;
  }

  .reviews_item {
    min-width: 419px;
    max-height: 95px;
    padding: 15px 0;
    background-color: {{section.settings.box_color}};
    display: flex;
    align-items: center;
    padding: 0 22px 0 22px;
    margin-left: 22px;
    margin-right: 22px;
    margin-bottom: 30px;
    /* box-shadow: 4px 4px 20px #DE9FC2; */
    border-radius: 10px;
  }

  .item_wrap {
    margin: 10px 0px;
    display: flex;
    align-items: center;
  }

  .item_wrap-icon {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .item_wrap-icon__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: bold;
    background-color: {{section.settings.rating_color}};
    border-radius: 100%;
    width: 45px;
    height: 45px;
    max-width: unset;
  }

  .item_icon-review {
    --font-size: 8px;
    --mobile-font-size: 8px;
    color: #ffffff;
    position: absolute;
    bottom: 0;
    right: 0;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
  }

  .item_wrap-text {
    line-height: 1.5;
    padding-left: 18px;
    --font-size: 16px;
    color: #000;
  }

  .item_wrap-text p {
    margin: 0;
    padding: 0;
  }

  @media (max-width: 767px) {
    .reviews_title p {
      --mobile-font-size: 28px;
    }
  }

  @keyframes CarouselSlider {
    0% {
      transform: translateX(0);
    }

    to {
      transform: translateX(-100%);
    }
  }

  .custom__item {
    padding-left: 0;
  }
{% endstyle %}

